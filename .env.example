# Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Application Settings
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Environment Indicator
ENVIRONMENT=development

# Optional: Local PostgreSQL Alternative
# LOCAL_DATABASE_URL=postgresql://localhost/metabolomics_dev

# Email Configuration (required for scheduling notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# OAuth Configuration (optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Railway Production Example:
# DATABASE_URL=postgresql://postgres:password@railway.host:5432/railway
# SECRET_KEY=your-production-secret-key
# FLASK_ENV=production
# FLASK_DEBUG=False